<html>
  <head>
    <meta charset="utf-8"/>
    <link href="{{rootUrl}}assets/style.css" rel="stylesheet" />
  </head>
  <body>
  <input type="radio" checked="checked" data-tab-name="tab1" id="tab1" name="tab"/>	  
  <input type="radio" data-tab-name="tab2" id="tab2" name="tab"/>	  
  <input type="radio" data-tab-name="tab3" id="tab3" name="tab"/>	  
  <input type="radio" data-tab-name="tab4" id="tab4" name="tab"/>
<header class="navigation">
	<div class="content">
		<span class="project-name">Appraise</span>
		<ul class="menu">
			<li>
          <a href="{{rootUrl}}">Home</a>
        </li>
		<li>
		  <a href="{{rootUrl}}summary.html">Summary</a>
		</li>
        <li>
          <a href="https://github.com/gojko/appraise">Help</a>
        </li>
      </ul>
    </div>
  </header>
  <header class="page-header">
    <div class="content">
      <ul class="navigation-crumbs">
		{{#each breadcrumbs}}
			<li>{{this}}</li>
		{{/each}}		
		<li>{{exampleName}}</li>
      </ul>
    </div>
	<div class="content tab-container">
		<label for="tab1">Grid</label>
		{{#if example.output.screenshot}}
			{{#if example.expected}}    
				<label for="tab2">Overlay</label>
			{{/if}}
		{{/if}}
		{{#if example.output.source}}
		<label for="tab3">Inspect</label>
		{{/if}}
		{{#if example.output.logs}}
		<label for="tab4">Logs</label>
		{{/if}}
	</div>	  
  </header>

  <div class="content page-block summary" data-outcome-status="{{example.outcome.status}}">
	<div class="header">
		<dl class="stats">
		<dt>Outcome</dt>
		<dd>{{example.outcome.status}}</dd>
		{{#if example.outcome.message}}
		<dt>Cause</dt>
		<dd>{{example.outcome.message}}</dd>
		{{/if}}
		</dl>
	</div>
  {{#if approvalInstructions}}
    <div class="instructions">
      Approve this example from your command line using:
      <code>
        {{approvalInstructions}}
      </code>
    </div>
  {{/if}}
  </div>


  <div class="content card-container"  data-tab-panel="tab1">		
	{{#if example.expected}}  
    <div class="card">
		<span class="card-title">Expected</span>
		<div class="card-contents">
			<img src="../{{example.expected}}"/>
		</div>
	</div>
	{{/if}}	
	{{#if example.output.screenshot}}
		<div class="card">
			<span class="card-title">Actual</span>
			<div class="card-contents" >
				<img class="card-contents" src="{{example.output.screenshot}}" />
			</div>
		</div>
	 {{/if}}
	{{#if example.outcome.image}}
		<div class="card">
			<span class="card-title">Diff</span>
			<div class="card-contents" >
			<img src="{{example.outcome.image}}" />
			</div>
		</div>
	 {{/if}}

	 {{#if example.output.source}}
		<div class="card">
			<span class="card-title">Source</span>
			<iframe class="card-contents" src="{{example.output.source}}"></iframe>
		</div>
	 {{/if}}
  </div>
  <div class="content"  data-tab-panel="tab2">
	 <div class="box controls" data-overlay-control="overlay-expected">
		  <span class="box-title"><input data-overlay-role="visibility" data-target="overlay-expected" type="checkbox" checked="checked"/> Expected</span>
		  <span class="control"><label>Opacity</label><input data-overlay-role="opacity" type="range" min="0" max="1" step="0.05" value="0.5"></span>
		  <span class="control"><label>Scale</label><input data-overlay-role="scale" type="range" min="-10" max="10" step="1" value="0"></span>
	  </div>
	 <div class="box controls" data-overlay-control="overlay-actual">
		  <span class="box-title"><input data-overlay-role="visibility" data-target="overlay-expected" type="checkbox" checked="checked"/> Actual</span>
		  <span class="control"><label>Opacity</label><input data-overlay-role="opacity" type="range" min="0" max="1" step="0.05" value="0.5"></span>
		  <span class="control"><label>Scale</label><input data-overlay-role="scale" type="range" min="-10" max="10" step="1" value="0"></span>
	  </div>
	{{#if example.outcome.image}}
	 <div class="box controls"  data-overlay-control="overlay-diff">
		  <span class="box-title"><input data-overlay-role="visibility" data-target="overlay-expected" type="checkbox" /> Diff</span>
		  <span class="control"><label>Opacity</label><input data-overlay-role="opacity" type="range" min="0" max="1" step="0.05" value="0.5"></span>
		  <span class="control"><label>Scale</label><input data-overlay-role="scale" type="range" min="-10" max="10" step="1" value="0"></span>
	  </div>
	 {{/if}}
	   <div class="overlay-container">		
		   <img class="draggable" id="overlay-expected" src="../{{example.expected}}"/>
		   {{#if example.output.screenshot}}
			 <img class="draggable" id="overlay-actual" class="card-contents" src="{{example.output.screenshot}}" />
		   {{/if}}
		   {{#if example.outcome.image}}
			  <img class="draggable" id="overlay-diff" src="{{example.outcome.image}}" />
		   {{/if}}
	   </div>
  </div>
  {{#if example.output.source}}
	<div class="content grow" data-tab-panel="tab3">
  	<iframe src="{{example.output.source}}"></iframe>
	</div>
  {{/if}}

    <script src="{{rootUrl}}assets/result-scripts.js"></script>
</body></html>

